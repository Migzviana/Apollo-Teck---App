<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:alignContent="flex_start"
    app:flexWrap="wrap"
    app:showDivider="beginning|middle"
    app:dividerDrawable="@drawable/divider"
    android:background="@color/corApollo"
    android:padding="10dp">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
       android:text="Hotel Tivoli Mofarrej"
       android:textColor="@color/white"
       android:fontFamily="sans-serif-medium"
       android:textAlignment="center"
       android:textSize="20dp" />

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
       android:layout_marginBottom="20dp"
       android:text="@string/string_hotel_sp"
       android:fontFamily="sans-serif-medium"
       android:textColor="@color/white"
       android:textAlignment="center" />

   <ImageView
       android:layout_width="0dp"
       android:layout_height="150dp"
       android:layout_margin="3dp"
       app:layout_flexBasisPercent="100%"
       android:scaleType="centerCrop"
       android:src="@drawable/hotel_sp4" />

   <ImageView
       android:layout_width="0dp"
       android:layout_height="250dp"
       android:layout_margin="3dp"
       android:scaleType="centerCrop"
       app:layout_flexBasisPercent="45%"
       android:src="@drawable/hotel_sp1" />

   <ImageView
       android:layout_width="0dp"
       android:layout_height="250dp"
       android:layout_margin="3dp"
       android:scaleType="centerCrop"
       app:layout_flexBasisPercent="45%"
       android:src="@drawable/hotel_sp2" />

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textAlignment="center"
       android:layout_marginTop="15dp"
       android:layout_marginBottom="15dp"
       android:text="@string/pontoturistico_sp"
       android:textColor="@color/white" />

   <ImageView
       android:layout_width="0dp"
       android:layout_height="250dp"
       android:layout_margin="3dp"
       android:scaleType="centerCrop"
       app:layout_flexBasisPercent="45%"
       android:src="@drawable/tourist_sp1" />

   <ImageView
       android:layout_width="0dp"
       android:layout_height="250dp"
       android:layout_margin="3dp"
       app:layout_flexBasisPercent="45%"
       android:src="@drawable/tourist_sp2" />

</com.google.android.flexbox.FlexboxLayout>






