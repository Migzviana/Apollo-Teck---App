<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:alignContent="flex_start"
    app:flexWrap="wrap">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_margin="3dp"
        android:scaleType="centerCrop"
        android:id="@+id/modalImage1"
        app:layout_flexBasisPercent="100%"
        app:shapeAppearanceOverlay="@style/RoundedCorners"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_margin="3dp"
        android:scaleType="centerCrop"
        android:id="@+id/modalImage2"
        app:layout_flexBasisPercent="44%"
        app:shapeAppearanceOverlay="@style/RoundedCorners"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_margin="3dp"
        android:scaleType="centerCrop"
        android:id="@+id/modalImage3"
        app:layout_flexBasisPercent="45%"
        app:shapeAppearanceOverlay="@style/RoundedCorners"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_margin="3dp"
        android:scaleType="centerCrop"
        android:id="@+id/modalImage4"
        app:layout_flexBasisPercent="44%"
        app:shapeAppearanceOverlay="@style/RoundedCorners"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_margin="3dp"
        android:scaleType="centerCrop"
        android:id="@+id/modalImage5"
        app:layout_flexBasisPercent="45%"
        app:shapeAppearanceOverlay="@style/RoundedCorners"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_margin="3dp"
        android:scaleType="centerCrop"
        android:id="@+id/modalImage6"
        app:layout_flexBasisPercent="100%"
        app:shapeAppearanceOverlay="@style/RoundedCorners"/>
</com.google.android.flexbox.FlexboxLayout>
